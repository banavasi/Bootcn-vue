{
  "name": "@bootcn-vue/cli",
  "version": "0.0.1",
  "description": "CLI for bootcn-vue - add Bootstrap + Vue 3 components to your project",
  "type": "module",
  "bin": {
    "bootcn-vue": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --fix"
  },
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "commander": "^12.1.0",
    "execa": "^9.5.1",
    "fs-extra": "^11.2.0",
    "picocolors": "^1.1.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.14.0",
    "tsup": "^8.3.5",
    "typescript": "~5.8.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/banavasi/bootcn-vue.git",
    "directory": "packages/cli"
  },
  "keywords": [
    "vue",
    "vue3",
    "bootstrap",
    "cli",
    "components",
    "shadcn"
  ],
  "author": "Shashank Shandilya",
  "license": "MIT"
}
